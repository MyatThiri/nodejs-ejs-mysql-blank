<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
  </head>
  <style media="screen">
      table {
      border-collapse: collapse;
      width: 100%;
    }

    table, th, td {
      border: 1px solid black;
    }
  </style>
  <body>

    <h1>User List</h1>
    <form id="frm" action="/admin/users/list" method="post">
    <select class="" name="role">
      <option value="">All</option>
      <option value="Admin">Admin</option>
      <option value="User">User</option>
    </select>
      <input type="search" name="keyword" value="<%= search.keyword || '' %>">
      <input type="submit" name="" value="Search">
    </form>
    <br>
    <table>
      <thead>
        <tr>
          <th>No</th>
          <th>Name</th>
          <th>Role</th>
          <th>Email</th>
          <th>Updated</th>
        </tr>
      </thead>
      <tbody>
        <% if (users.length == 0) { %>
          <td colspan="5">No data found!</td>
        <%  } %>

        <% for (var i = 0; i < users.length; i++){ %>
          <tr>
            <td><%= i+1 %></td>
            <td><a href="/admin/users/view/<%= users[i].uid %>"><%= users[i].name %></a></td>
            <td><%= users[i].role %></td>
            <td><%= users[i].email %></td>
            <td><%= users[i].updated %></td>
          </tr>
      <% } %>
      </tbody>
    </table>
  </body>
  <script type="text/javascript">
    <% if (search.role) { %>
      frm.role.value = '<%= search.role %>'
    <% } %>
  </script>
</html>
